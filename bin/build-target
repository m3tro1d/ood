#!/usr/bin/env bash

if [ -z "$1" ]; then
  echo "usage: $0 [target name]"
  exit 1
fi

BUILD_DIRECTORY="$PWD/cmake-build"
USER_ID=$(id -u)

mkdir -p "$BUILD_DIRECTORY"

docker run -t -i \
  --user "$USER_ID" \
  -v /etc/passwd:/etc/passwd:ro \
  -v /etc/group:/etc/group:ro \
  -v ${PWD}:/app/src \
  -v ${BUILD_DIRECTORY}:/app/build \
  ood-builder \
  $1
